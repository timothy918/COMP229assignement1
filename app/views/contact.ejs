      <figure class="contact">
        <figcaption>LinkedIn: 010721185</figcaption>
        <img src="/img/linkedin.svg" alt="general bookkeeping" class="icons" />
      </figure>
      <figure class="contact">
        <figcaption>Github: timothy918</figcaption>
        <img src="/img/github.svg" alt="general bookkeeping" class="icons" />
      </figure>
    </div>
  </div>
</main>
<script>
  function sendEmail(event) {
    event.preventDefault(); // Prevents the form from submitting normally
    // Redirect to home page
    window.location.href = "/";
    // Send email
    const form = document.querySelector("form");
    const formData = new FormData(form);
    const email = "mailto:tkwok15@my.centennialcollege.ca";
    const subject = encodeURIComponent(formData.get("bSubject"));
    const body = encodeURIComponent(
      formData.get("bMessage") +
        "; " +
        formData.get("bFirstName") +
        "; " +
        formData.get("bListName") +
        "; " +
        formData.get("bEmailAddress") +
        "; " +
        formData.get("bPhone")
    );
    const mailtoLink = `${email}?subject=${subject}&body=${body}`;
    // Open the email client
    window.open(mailtoLink);
  }
</script>
